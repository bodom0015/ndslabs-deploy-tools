#!/bin/bash

cat << EOF
    Usage:
        1. Source an openstack rc
        2. Create a named config volume container with the credentials
        3. Run with credentials read-only
    Example:
        . my-openstack-rc.sh
        env | grep OS_ | xargs -0 | sed 's/^OS_/export OS_/' | docker run --name os_credvol -i deploy-heat
        docker run --rm -it --volumes-from os_credvol:ro ubuntu bash

    Automated - will run as above:
        eval $(docker run --rm -t ndslabs/heat-deploy usage docker)
        
EOF
exit 0
